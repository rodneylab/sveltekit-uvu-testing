{
  "name": "svelte-uvu-testing",
  "version": "0.0.1",
  "scripts": {
    "dev": "svelte-kit dev --port 3030",
    "build": "svelte-kit build",
    "package": "svelte-kit package",
    "preview": "svelte-kit preview --port 3000",
    "prepare": "svelte-kit sync",
    "test": "playwright test",
    "test:unit": "uvu tests/lib -r tsm -r module-alias/register -r vite-register -r tests/setup/register -i setup",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "lint:css": "stylelint \"src/**/*.{css,svelte}\"",
    "prettier:check": "prettier --check --plugin-search-dir=. .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
  },
  "_moduleAliases": {
    "$lib": "src/lib",
    "$tests": "tests"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^16.2.1",
    "@fontsource/fira-code": "^4.5.8",
    "@fontsource/open-sans": "^4.5.8",
    "@playwright/test": "^1.20.2",
    "@sveltejs/adapter-auto": "next",
    "@sveltejs/kit": "next",
    "@testing-library/dom": "^8.12.0",
    "@testing-library/svelte": "^3.1.0",
    "@testing-library/user-event": "^14.0.4",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^3.4.1",
    "husky": "^7.0.4",
    "jsdom": "^19.0.0",
    "module-alias": "^2.2.2",
    "postcss-html": "^1.3.0",
    "prettier": "^2.6.2",
    "prettier-plugin-svelte": "^2.6.0",
    "stylelint": "^14.6.1",
    "stylelint-config-recommended": "^7.0.0",
    "stylelint-config-standard": "^25.0.0",
    "svelte": "^3.46.6",
    "svelte-check": "^2.4.6",
    "svelte-preprocess": "^4.10.5",
    "tslib": "^2.3.1",
    "tsm": "^2.2.1",
    "typescript": "~4.6.3",
    "uvu": "^0.5.3",
    "vite-register": "^0.0.9"
  },
  "type": "module"
}
