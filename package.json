{
  "name": "svelte-uvu-testing",
  "version": "0.0.1",
  "license": "BSD-3-Clause",
  "description": "SvelteKit uvu testing: how you can easily add fast component and utility function unit tests to your Svelte app using uvu with TypeScript.",
  "scripts": {
    "dev": "vite dev --port 3030",
    "build": "vite build",
    "package": "svelte-kit package",
    "preview": "vite preview --port 3000",
    "prepare": "svelte-kit sync",
    "test": "playwright test",
    "test:unit": "uvu tests/lib -r tsm -r module-alias/register -r vite-register -r tests/setup/register -i setup",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "lint:css": "stylelint \"src/**/*.{css,svelte}\"",
    "prettier:check": "prettier --check --plugin-search-dir=. .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
  },
  "_moduleAliases": {
    "$lib": "src/lib",
    "$tests": "tests"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.0.0",
    "@fontsource/fira-code": "^4.5.9",
    "@fontsource/open-sans": "^4.5.10",
    "@playwright/test": "^1.22.2",
    "@sveltejs/adapter-auto": "next",
    "@sveltejs/kit": "next",
    "@testing-library/dom": "^8.13.0",
    "@testing-library/svelte": "^3.1.1",
    "@testing-library/user-event": "^14.2.0",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "commitlint": "^17.0.0",
    "esbuild": "^0.14.39",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "husky": "^8.0.1",
    "jsdom": "19",
    "module-alias": "^2.2.2",
    "postcss-html": "^1.4.1",
    "prettier": "^2.6.2",
    "prettier-plugin-svelte": "^2.7.0",
    "stylelint": "^14.8.3",
    "stylelint-config-recommended": "^8.0.0",
    "stylelint-config-standard": "^26.0.0",
    "svelte": "^3.48.0",
    "svelte-check": "^2.7.1",
    "svelte-preprocess": "^4.10.6",
    "tslib": "^2.4.0",
    "tsm": "^2.2.1",
    "typescript": "~4.7.4",
    "uvu": "0.5.4",
    "vite": "^2.9.13",
    "vite-register": "^0.0.9"
  },
  "type": "module",
  "peerDependencies": {
    "vite": "^2.9.13"
  }
}
